{
  "name": "ticket-booking-backend",
  "version": "1.0.0",
  "description": "Production-ready ticket booking platform with real-time seat locking",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "db:migrate": "ts-node src/database/migrate.ts",
    "db:seed": "ts-node src/database/seed.ts",
    "cdk": "cdk",
    "cdk:build": "tsc -p infrastructure/tsconfig.json",
    "cdk:deploy": "npm run cdk:build && cdk deploy",
    "cdk:destroy": "cdk destroy",
    "cdk:synth": "npm run cdk:build && cdk synth",
    "cdk:diff": "npm run cdk:build && cdk diff",
    "infrastructure:watch": "tsc -p infrastructure/tsconfig.json -w"
  },
  "keywords": ["ticket-booking", "typescript", "graphql", "aws", "dynamodb", "postgresql", "redis", "cdk", "infrastructure"],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "@types/node": "^20.10.0",
    "apollo-server-express": "^3.13.0",
    "aws-sdk": "^2.1692.0",
    "express": "^4.21.2",
    "graphql": "^15.8.0",
    "ioredis": "^5.6.1",
    "pg": "^8.16.3",
    "ts-node": "^10.9.2",
    "typeorm": "^0.3.25",
    "typescript": "^5.8.3",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "joi": "^17.11.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1",
    "reflect-metadata": "^0.1.13",
    "graphql-type-json": "^0.3.2",
    "apollo-server-core": "^3.13.0",
    "dataloader": "^2.2.2",
    "type-graphql": "^1.1.1",
    "typedi": "^0.10.0",
    "aws-cdk-lib": "^2.110.0",
    "constructs": "^10.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/uuid": "^9.0.7",
    "@types/pg": "^8.10.9",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.1",
    "aws-cdk": "^2.110.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
